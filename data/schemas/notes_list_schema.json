{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "status", "data"],
  "properties": {
    "success": { "type": "boolean" },
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "category"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" }
        }
      }
    }
  }
}